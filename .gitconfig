[color]
    diff = auto
    status = auto
    branch = auto
[user]
	name = John Wood
	email = john@johnpwood.net
[alias]
    co = checkout
    ci = commit
    topush = log origin/master..
[core]
    excludesfile = /Users/john.wood/.gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = opendiff
[github]
	user = jwood
